template <typename T>
bool
check (const T& in, const std::string& s)
{
  std::stringstream os;
  os << in;
  if (os.str () != s)
    {
      std::cerr << "fail: " << os.str () << ", expected: " << s << std::endl;
      return false;
    }
  return true;
}

int
main (void)
{
  int fail = 0;
  ]AT_YYLTYPE[ loc;  fail += check (loc, "1.1");
