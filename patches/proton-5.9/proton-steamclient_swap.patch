+    TRACE("\n");
+    pBreakpad_SteamSetAppID(a);
+}
+
+int CDECL STEAMCLIENT_Breakpad_SteamSetSteamID(UINT64 a)
+{
+    TRACE("\n");
+    return pBreakpad_SteamSetSteamID(a);
+}
+
+int CDECL STEAMCLIENT_Breakpad_SteamWriteMiniDumpSetComment(char *a)
+{
