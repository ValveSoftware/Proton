+static char *normalize_mime_type(const char *mime)
+{
+    char *new_mime;
+    const char *cur_read;
+    char *cur_write;
+    int remove_count = 0;
+
+    cur_read = mime;
+    while (*cur_read != 0)
+    {
+        if (*cur_read == ' ' || *cur_read == '"')
+            remove_count++;
+        cur_read++;
+    }
+
+    new_mime = heap_alloc((cur_read - mime) - remove_count + 1);
+    cur_read = mime;
+    cur_write = new_mime;
+
+    do
+    {
+        if (*cur_read != ' ' && *cur_read != '"')
+            *cur_write++ = tolower(*cur_read);
+    } while (*cur_read++);
+
+    return new_mime;
+}
