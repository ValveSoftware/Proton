  *           merge_events
  *
@@ -609,8 +627,16 @@ static void set_focus( XEvent *xev, HWND hwnd, Time time )
     Window win;
     GUITHREADINFO threadinfo;

-    TRACE( "setting foreground window to %p\n", hwnd );
-    SetForegroundWindow( hwnd );
