     for (i = 0; i < hat_count; i++)
         set_hat_value(ext, i, pSDL_JoystickGetHat(ext->sdl_joystick, i));
 
@@ -544,7 +544,7 @@ static SHORT compose_dpad_value(SDL_GameController *joystick)
